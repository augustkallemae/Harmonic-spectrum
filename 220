    <script>
        function drawWave(canvasId, frequency, amplitude) {
            const canvas = document.getElementById(canvasId);
            const ctx = canvas.getContext('2d');
            const width = canvas.width;
            const height = canvas.height;
            ctx.clearRect(0, 0, width, height);
            ctx.beginPath();
            ctx.moveTo(0, height / 2);

            const angularFrequency = 2 * Math.PI * frequency / 500; // Normalize frequency to canvas width
            for (let x = 0; x <= width; x++) {
                const y = Math.sin(angularFrequency * x) * (height / 2) * amplitude;
                ctx.lineTo(x, height / 2 - y);
            }

            ctx.stroke();
        }

        function updateWave(frequency, sliderId, canvasId) {
            const amplitude = document.getElementById(sliderId).value;
            drawWave(canvasId, frequency, amplitude);
        }

        document.getElementById('slider220').addEventListener('input', () => {
            updateWave(1, 'slider220', 'canvas220');
        });

        document.getElementById('slider440').addEventListener('input', () => {
            updateWave(2, 'slider440', 'canvas440');
        });

        document.getElementById('slider660').addEventListener('input', () => {
            updateWave(3, 'slider660', 'canvas660');
        });

        document.getElementById('slider880').addEventListener('input', () => {
            updateWave(4, 'slider880', 'canvas880');
        });

        document.getElementById('slider1100').addEventListener('input', () => {
            updateWave(5, 'slider1100', 'canvas1100');
        });

        document.getElementById('slider1320').addEventListener('input', () => {
            updateWave(6, 'slider1320', 'canvas1320');
        });

        document.getElementById('slider1540').addEventListener('input', () => {
            updateWave(7, 'slider1540', 'canvas1540');
        });

        // Initial drawing with amplitude 0
        drawWave('canvas220', 1, 0);
        drawWave('canvas440', 2, 0);
        drawWave('canvas660', 3, 0);
        drawWave('canvas880', 4, 0);
        drawWave('canvas1100', 5, 0);
        drawWave('canvas1320', 6, 0);
        drawWave('canvas1540', 7, 0);
    </script>
